<UserControl x:Class="ContactsSolution.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsSolution.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Margin="5" Background="Azure">
        <!-- how single item should look -->
        <StackPanel Margin="5">
            <TextBlock x:Name="NameTxtBlock" FontSize="20" FontWeight="Bold" 
                       Text="Name"/>
            <TextBlock x:Name="EmailTxtBlock" FontSize="15" Foreground="DodgerBlue" 
                       Text="Email"/>
            <TextBlock x:Name="PhoneTxtBlock" FontSize="15" FontStyle="Italic" 
                       Text="Phone"/>
        </StackPanel>
    </Grid>
</UserControl>
