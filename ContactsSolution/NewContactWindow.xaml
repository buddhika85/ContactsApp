<Window x:Class="ContactsSolution.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsSolution"
        mc:Ignorable="d"
        Title="New Contact" Height="200" Width="800">

    

    <Grid>

        <StackPanel Margin="10">

            <TextBox x:Name="NameTxtBox" Style="{StaticResource BottomMarginTxtBx}" />
            <TextBox x:Name="EmailTxtBox" Style="{StaticResource BottomMarginTxtBx}" />
            <TextBox x:Name="PhoneTxtBox" Style="{StaticResource BottomMarginTxtBx}" />

            <Button x:Name="SaveBtn" Content="Save" Click="SaveBtn_OnClick"></Button>
        </StackPanel>
        
    </Grid>
</Window>
